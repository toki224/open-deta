# AWSデプロイ設定ファイルの例
# このファイルを aws-config.env にコピーして、実際の値を設定してください
# 使用方法: source scripts/aws-config.env

# プロジェクト名
export PROJECT_NAME=barrier-navi

# AWSリージョン
export AWS_REGION=ap-northeast-1

# RDS設定
export RDS_USERNAME=barrier_user
export RDS_PASSWORD=your_secure_password_here
export RDS_DB_NAME=station

# ECS設定
export ECS_CPU=256
export ECS_MEMORY=512
export ECS_DESIRED_COUNT=1

# VPC設定（既存のVPCを使用する場合）
# export VPC_ID=vpc-xxxxxxxxx
# export SUBNET_1=subnet-xxxxxxxxx
# export SUBNET_2=subnet-yyyyyyyyy

# ALB設定
export ALB_SCHEME=internet-facing
export ALB_TYPE=application

# その他の設定
export FLASK_ENV=production
export FLASK_PORT=5000
